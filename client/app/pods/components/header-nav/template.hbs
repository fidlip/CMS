{{yield}}
<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner" data-ng-controller="HeaderController">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="../" class="navbar-brand">How to SANE</a>
        </div>
        <nav class="mobile-menu collapse navbar-collapse bs-navbar-collapse" role="navigation">

            {{#if session.isAuthenticated }}

            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" {{ action 'invalidateSession' }}>Signout</a>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {{#each menu as |link|}}
                <li class="dropdown">
                    {{#if link.submenu}}
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	        		{{link.title}}<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        {{#each subLink in link.submenu}}
                        <li>
                            {{#link-to subLink.link}}{{subLink.title}}{{/link-to}}
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}
                    	{{#link-to link.link}}{{link.title}}{{/link-to}}
                    {{/if}}
                </li>
                {{/each}}
            </ul>
            
            {{else}}

            <ul class="nav navbar-nav navbar-right">
                <li>{{#link-to 'register'}}Signup{{/link-to}}
                </li>
                <li class="divider-vertical"></li>
                <li>{{#link-to 'login'}}Login{{/link-to}}
                </li>
            </ul>
            {{/if}}
        </nav>
    </div>
</header>
